<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workout_planner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrewlewis.fitly.WorkoutPlannerActivity"
    android:background="#fff7e6">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Please choose from the following:"
        android:layout_marginTop="15dp"
        android:id="@+id/textTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Existing Workouts"
        android:textSize="20dp"
        android:id="@+id/view_existing_workout_button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Workout Plan"
        android:textSize="20dp"
        android:layout_below="@+id/view_existing_workout_button"
        android:layout_marginTop="35dp"
        android:id="@+id/create_new_workout_plan_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Sample Workout Template"
        android:textSize="20dp"
        android:layout_below="@+id/create_new_workout_plan_button"
        android:layout_marginTop="35dp"
        android:id="@+id/view_sample_workout_plan_button"/>



</RelativeLayout>
